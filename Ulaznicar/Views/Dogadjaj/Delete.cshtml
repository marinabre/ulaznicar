@model Ulaznicar.Models.Dogadjaj

@{
    ViewBag.Title = "Delete";
}

<h2>Brisanje događaja</h2>

<h3>Jeste li sigurni da želite ukloniti zapis?</h3>
<div>
    <h4>Dogadjaj</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Naziv
        </dt>

        <dd>
            @Html.DisplayFor(model => model.naziv)
        </dd>

        <dt>
            Datum održavanja
        </dt>

        <dd>
            @Html.DisplayFor(model => model.datum)
        </dd>

        <dt>
            Broj mjesta
        </dt>

        <dd>
            @Html.DisplayFor(model => model.brojmjesta)
        </dd>

        <dt>
            Plakat
        </dt>

        <dd>
            <img id="the-image" src="@Url.Action("Show", "Dogadjaj", new { id = Model.Id })" style="max-height:150px; max-width:150px; border-radius:10px" />
        </dd>

        <dt>
            Adresa lokacije
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lokacija.adresa)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Izbriši" class="btn btn-default" /> |
            @Html.ActionLink("Povratak na popis događaja", "Index")
        </div>
    }
</div>
