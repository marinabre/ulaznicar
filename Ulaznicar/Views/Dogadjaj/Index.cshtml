@model PagedList<Ulaznicar.Models.Dogadjaj>
@using PagedList.Mvc;
@using PagedList;
@using Microsoft.AspNet.Identity
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />


@*@model IEnumerable<Ulaznicar.Models.Dogadjaj>*@

@{
    ViewBag.Title = "Popis događaja";
}

<h2>Događaji</h2>

@if (Request.IsAuthenticated) 
{ 
<p>
    @Html.ActionLink("Dodaj novi događaj", "Create")
</p>
}
@using (Html.BeginForm("Index", "Događaj", FormMethod.Get))
{
    <p>
        Pretraži po nazivu: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            Plakat
        </th>
        <th>
            @Html.ActionLink("Naziv", "Index", new { sortOrder = ViewBag.NazivSortParm, currentFilter=ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Datum održavanja", "Index", new { sortOrder = ViewBag.DatumSortParm, currentFilter=ViewBag.CurrentFilter })
        </th>
        <th>
           @Html.ActionLink("Lokacija", "Index", new { sortOrder = ViewBag.LokSortParm, currentFilter=ViewBag.CurrentFilter })
        </th>
        <th>
            Broj mjesta
        </th>


        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img id="the-image" src="@Url.Action("Show", "Dogadjaj", new { plakat = item.plakat })" style="max-height:250px; max-width:300px; border-radius:10px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.datum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lokacija.adresa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.brojmjesta)
        </td>
        @if (ViewBag.user == "ADMIN")
        {
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.Id }) |
            @Html.ActionLink("Izbriši", "Delete", new { id=item.Id })
        </td>
        }
        @if (Request.IsAuthenticated)
        {
            <td>
                @Html.ActionLink("Kupi ulaznicu!", "Create", "Karta", new { id = item.Id })
            </td>
        }

    </tr>
}

</table>
<div class="col-sm-10">
    <div class="center">
        <br />
        Stranica @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) od @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    </div>
</div>