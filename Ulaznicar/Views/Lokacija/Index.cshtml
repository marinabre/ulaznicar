@model IEnumerable<Ulaznicar.Models.Lokacija>

@{
    ViewBag.Title = "Popis lokacija";
}

<h2>Popis lokacija</h2>

<p>
    @Html.ActionLink("Stvori novu", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Adresa
        </th>
        <th>
            Naziv
        </th>
        <th>
            Ime grada
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.adresa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grad.imegrad)
        </td>
        <td>
            @Html.ActionLink("Ažuriraj", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.Id }) |
            @Html.ActionLink("Izbriši", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
