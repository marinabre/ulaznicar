@model Ulaznicar.Models.CijenaKarte

@{
    ViewBag.Title = "Izbriši";
}

<h2>Izbriši</h2>

<h3>Jeste li sigurni da želite izbrisati ovaj zapis?</h3>
<div>
    <h4>Cijena karte</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Naziv događaja
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Dogadjaj.naziv)
        </dd>

        <dt>
            Ime kategorije karte
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VrstaKarte.imekategorije)
        </dd>
        <dt>
            Cijena
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cijena)
        </dd>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Izbriši" class="btn btn-default" /> |
            @Html.ActionLink("Povratak na popis", "Index")
        </div>
    }
</div>
