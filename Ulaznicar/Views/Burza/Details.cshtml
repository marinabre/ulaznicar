        </dt>

        <dd>
            @Html.DisplayFor(model => model.Karta.Dogadjaj.naziv)
        </dd>

        <dt>
            Datum ponude
        </dt>

        <dd>
            @Html.DisplayFor(model => model.datumponude)
        </dd>

