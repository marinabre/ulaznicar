@model PagedList<Ulaznicar.Models.Burza>
@using PagedList.Mvc;
@using PagedList;
@using Microsoft.AspNet.Identity
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Burza";
}

<h2>Karte na burzi</h2>

<p>
    @Html.ActionLink("Stavi svoju kartu na burzu", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Pretraži : @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Pretraži" />
    </p>
    <div class="form-group">
        <div class="radio-inline">
            @Html.RadioButton("search", "Dogadjaj", true,
          new { id = "Dogadjaj" }) po događaju
        </div>
        <div class="radio-inline">
            @Html.RadioButton("search", "Lokacija",
           new { id = "Lokacija" }) po lokaciji
        </div>
        <div class="radio-inline">
            @Html.RadioButton("search", "Datum",
           new { id = "Datum" }) po datumu
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Naziv događaja", "Index", new { sortOrder = ViewBag.NazivSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            Datum događaja
        </th>
        <th>
            @Html.ActionLink("Datum ponude", "Index", new { sortOrder = ViewBag.DatumSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            Datum prodaje
        </th>
        <th>
            @Html.ActionLink("Cijena", "Index", new { sortOrder = ViewBag.CijenaSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            Kupac
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KupljeneKarte.Karta.Dogadjaj.naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KupljeneKarte.Karta.Dogadjaj.datum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.datumponude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.datumprodaje)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cijena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Korisnik.korisnickoime)
        </td>
        @if (ViewBag.user == "ADMIN")
        {
            <td>
                @Html.ActionLink("Ažuriraj", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalji", "Details", new { id = item.Id }) |
                @Html.ActionLink("Izbriši", "Delete", new { id = item.Id })
            </td>
        }
        @if (Request.IsAuthenticated)
        {
            <td>
                @if (ViewBag.vlastite.IndexOf(item.IdKarta) != -1)
                {
                    @Html.ActionLink("Izbriši", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                }
                else
                {
                    if(item.IdKupac == null)
                    {
                        @Html.ActionLink("Kupi ulaznicu!", "Kupovina", new { id = item.Id }, new { @class = "btn btn-success" })
                    }
                }
            </td>
        }
    </tr>
}

</table>
<div class="col-sm-10">
    <div class="center">
        <br />
        Stranica @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) od @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    </div>
</div>
