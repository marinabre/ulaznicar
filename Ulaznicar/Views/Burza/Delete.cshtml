@model Ulaznicar.Models.Burza

@{
    ViewBag.Title = "Brisanje";
}

<h2>Brisanje</h2>

<h3>Jeste li sigurni da želite ukloniti zapis?</h3>
<div>
    <h4>Burza</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Događaj
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KupljeneKarte.Karta.Dogadjaj.naziv)
        </dd>

        <dt>
            Datum ponude
        </dt>

        <dd>
            @Html.DisplayFor(model => model.datumponude)
        </dd>

        <dt>
            Datum prodaje
        </dt>

        <dd>
            @Html.DisplayFor(model => model.datumprodaje)
        </dd>

        <dt>
            Cijena
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cijena)
        </dd>

        <dt>
            Kupac
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Korisnik.korisnickoime)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Ukloni s burze" class="btn btn-default" /> |
            @Html.ActionLink("Povratak na burzu", "Index")
        </div>
    }
</div>
