@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    <ul class="nav navbar-nav">

        <li>@Html.ActionLink("Burza", "Index", "Burza")</li>
        <li>@Html.ActionLink("Moje ulaznice", "Index", "Karta")</li>

        @if (User.Identity.GetUserName() == "ADMIN")
        {
            <li>@Html.ActionLink("Lokacije", "Index", "Lokacija")</li>
            <li>@Html.ActionLink("Vrste karata", "Index", "VrstaKarte")</li>
            <li>@Html.ActionLink("Cijene karata", "Index", "CijenaKarte")</li>
        }
    </ul>


    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Pozdrav " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registriraj se", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Prijava", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
